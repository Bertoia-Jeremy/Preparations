{% extends 'base.html.twig' %}

{% block title %}Guests index{% endblock %}

{% block body %}
    <h1>Guests index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guest in guests %}
            <tr>
                <td>{{ guest.id }}</td>
                <td>{{ guest.firstName }}</td>
                <td>{{ guest.lastName }}</td>
                <td>{{ guest.age }}</td>
                <td>
                    <a href="{{ path('guests_show', {'id': guest.id}) }}">show</a>
                    <a href="{{ path('guests_edit', {'id': guest.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('guests_new') }}">Create new</a>
{% endblock %}
