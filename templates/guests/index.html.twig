{% extends 'base.html.twig' %}

{% block title %}Guests index{% endblock %}

{% block body %}
    <div class="container my-2">
        <h1 class="text-center">Liste des invités</h1>
        <div class="w-100 text-end">
            <a class="btn btn-primary text-right" href="{{ path('guests_new') }}">Nouvel invité</a>
        </div>
    </div>

    <section class="container">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Âge</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for guest in guests %}
                <tr>
                    <td scope="row">{{ guest.firstName }}</td>
                    <td>{{ guest.lastName }}</td>
                    <td>{{ guest.age }}</td>
                    <td>
                        <a class="btn btn-success mr-2 my-1" href="{{ path('guests_show', {'id': guest.id}) }}">Voir</a>
                        <a class="btn btn-primary mr-2 my-1" href="{{ path('guests_edit', {'id': guest.id}) }}">Modifier</a>
                        {{ include('guests/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}
