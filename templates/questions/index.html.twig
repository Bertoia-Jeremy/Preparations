{% extends 'base.html.twig' %}

{% block title %}Questions index{% endblock %}

{% block body %}
    <div class="container my-2">
        <h1 class="text-center">Liste des questions</h1>
        <div class="w-100 text-end">
            <a class="btn btn-primary text-right" href="{{ path('questions_new') }}">Nouvelle question</a>
        </div>
    </div>

    <section class="container">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">Contenu</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for question in questions %}
                <tr>
                    <td scope="row">{{ question.content }}</td>
                    <td>
                        <a class="btn btn-success mr-2 my-1" href="{{ path('questions_show', {'id': question.id}) }}">Voir</a>
                        <a class="btn btn-primary mr-2 my-1" href="{{ path('questions_edit', {'id': question.id}) }}">Modifier</a>
                        {{ include('questions/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}
